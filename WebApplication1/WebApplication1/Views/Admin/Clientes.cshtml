@model IEnumerable<WebApplication1.Models.clientes>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Clientes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
</head>
<body>


    <form action="/Admin/Clientes" method="post">

            <input type="text" name="filtro"/>
            <input type="submit" value="buscar"/>
        </form>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreDeUsuario)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pass)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rol_Fk)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var lista in Model)
            {
            <tr>

                <td>
                    @Html.DisplayFor(modelitem => lista.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => lista.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => lista.NombreDeUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => lista.Pass)
                </td>

                @if (lista.Rol_Fk == 1)
                {
                    <td>Admin</td>
                }
                else
                {
                    <td>cliente</td>
                }

                <td>
                @Html.ActionLink("Compras", "", new { id = lista.Id })
                @Html.ActionLink("Deuda", "deuda", new { id = lista.Id })
                </td>


            </tr>
            }
        </tbody>
    </table>
   


</body>
</html>
